({$task sleep 0.1}
   {$task
      wait
      {tutorials_state_panel get is_paused}}
   {switch
      {tutorials_state_panel get fail_menu_response}
      ("retry"
         {tutorials_state_panel restart_state})})
{func
   set_inc_dec
   ($inc $dec)
