{new
   UIPanel
   tutorials_fail_panel
   (file
      "tutorial_fail.milo")
   (enter
      {$this set_focus tut_fail_retry.btn}
      {set
         [is_done]
         FALSE})
   (SELECT_MSG
      {if_else
         {&&
            {==
               $player_num
               {{gamemode get main_panel}
                  get_tutorial_player}}
            {!
               [is_done]}}
         {do
            {set
               [is_done]
               TRUE}
            {switch
               $component
               (tut_fail_retry.btn
                  {tutorials_state_panel
                     set
                     fail_menu_response
                     "retry"}
                  HIDE_UI_ELEMENTS)
               (tut_fail_skip.btn
                  {tutorials_state_panel
                     set
                     fail_menu_response
                     "skip"})}
            {script_task
               kTaskUISeconds
               (delay 1.25)
               (script
                  {ui pop_screen})}
            kDataUnhandled}
         TRUE})
   (BUTTON_DOWN_MSG
      {if_else
         {&&
            {==
               $player_num
               {{gamemode get main_panel}
                  get_tutorial_player}}
            {!
               [is_done]}}
         {do kDataUnhandled}
         TRUE})
   (BUTTON_UP_MSG
      {if_else
         {&&
            {==
               $player_num
               {{gamemode get main_panel}
                  get_tutorial_player}}
            {!
               [is_done]}}
         {do kDataUnhandled}
         TRUE})
   (is_done FALSE)}
{new
   UIScreen
   tutorials_fail_screen
   (panels tutorials_fail_panel helpbar)
   (helpbar
      ('' helpbar_select))
   (focus tutorials_fail_panel)
   (enter)
   (exit
      {{gamemode get main_screen}
         set
         unpause_on_transition
         TRUE})}