            {do
               {set
                  [char_name]
                  $text}
               {set
                  $tour_char
                  {char_data_provider
                     get_tour_char
                     {charlist.lst selected_pos}}}
               {band_ui_sink show_network_busy_icon}
               {entity_uploader
                  verify_char_name
                  [char_name]
                  $this}}}})
   (ROCK_CENTRAL_OP_COMPLETE_MSG
