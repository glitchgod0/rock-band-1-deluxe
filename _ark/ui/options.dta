   (enter
      {set_up_instrument_and_gamertag
         [player_num]}
      {helpbar
         set_limit_to_player_num
         [player_num]}
      {band_quit_provider
         init
         [player_num]
         [char_num]}
      {bandlist.lst set_provider band_quit_provider}
      {platform_mgr add_sink $this signin_changed})
   (exit
      {helpbar set_limit_to_player_num -1}
      {platform_mgr remove_sink $this signin_changed})
   (SIGNIN_CHANGED_MSG
      {if_else
         {==
            {ui current_screen}
            options_quitband_list_screen}
         {$this process_signin_change}
         {if
            {!
               {option_profile_change_warning_screen is_up}}
            {$this set signin_change_waiting TRUE}}})
   (process_signin_change
      {if
         {==
            {ui current_screen}
            options_quitband_list_screen}
         {ui push_screen option_profile_change_warning_screen}})
   (transition_complete
      {if
         {option_quitband_yesno_screen get quit}
         {option_quitband_yesno_screen set quit FALSE}
         {$this quit_band}}
      COMMON_TRANSITION_HANDLERS_FOR_SIGN_OUT)
   (quit_band
      {set
         $next_pos
         {bandlist.lst selected_pos}}
      {band_quit_provider
         quit
         {bandlist.lst selected_pos}}
      {autosave}
      {if
         {band_quit_provider get_num_bands}
         {if
            {==
               $next_pos
               {band_quit_provider get_num_bands}}
            {-- $next_pos}}
         {set
            $first_showing
            {-
               $next_pos
               {bandlist.lst num_display}}}
         {'++' $first_showing}
         {if
            {< $first_showing 0}
            {set $first_showing 0}}
         {bandlist.lst set_selected $next_pos $first_showing}}
      {bandlist.lst set_dirty})
   (SELECT_MSG
      {switch
         $component
         (bandlist.lst
            {if
               {>
                  {band_quit_provider get_num_bands}
                  0}
               {ui push_screen option_quitband_yesno_screen}})})}
