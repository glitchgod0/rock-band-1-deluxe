#define SET_UP_INSTRUMENT_AND_GAMERTAG
({do
      ($pad
         {joypad_get_players_padnum $player_num})
      ($controller_type
         {band_ui_sink get_controller_type})
      {if_else
         {== $controller_type kControllerNone}
         {do
            {instrument.lbl set_showing FALSE}}
         {do
            {instrument.lbl set_showing TRUE}
            {instrument.lbl
               set_localized
               {get_font_char_from_controller_type $controller_type}}}}
      {set
         $pad_num
         {joypad_get_players_padnum $player_num}}
      {gamertag.lbl
         set_localized
         {platform_mgr get_name $pad_num}}})
