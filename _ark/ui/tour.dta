{new
   WorldMapPanel
   tour_world_bg_panel
   (file world/tour_worldmap.milo)
   (zoomed FALSE)
   (town boston)
   (venue big_club)
   (playing_town_loop FALSE)
   (load
      {if
         {fx is_up}
         {fx fade_out}})
   (enter
      {set
         [zoomed]
         FALSE}
      {set
         [town]
         {{tour performer}
            town}}
      {set
         [venue]
         {{tour performer}
            venue}}
      {meta music_stop}
      {synth play bwt_spaceamb.cue}
      {set
         [playing_town_loop]
         FALSE}
      #ifdef HX_PS3
      {rnd set_sync 2}
      #endif)
   (exit
      {synth stop bwt_spaceamb.cue}
      {synth stop bwt_cityamb.cue}
      {fx fade_out}
      #ifdef HX_PS3
      {rnd set_sync 1}
      #endif)
   (play_town_loop
      ($play)
      {if_else
         $play
         {unless
            [playing_town_loop]
            {synth play bwt_cityamb.cue}}
         {synth stop bwt_cityamb.cue}}
      {set
         [playing_town_loop]
         $play})
   (update
      {$this
         sync
         [town]
         [venue]
         [zoomed]})
   (zoom_in
      {set
         [zoomed]
         TRUE}
      {$this update})
   (zoom_out
      {set
         [zoomed]
         FALSE}
      {set
         [venue]
         ''}
      {$this update})
   (zoom_in_impl
      {zoom.grp
         animate
         (dest
            {zoom.grp end_frame})})
   (zoom_out_impl
      {zoom.grp
         animate
         (dest 0)})}
#define TOUR_HINT_PANEL_HANDLERS
(LIMIT_TO_LEADER_SESSION
   (force_exit TRUE)
   (BUTTON_DOWN_MSG
      {if
         {== $button kPad_X}
         {{tour hint}
            advance}
         {synth play button_select}
         {ui
            goto_screen
            {cond
               ({tour hint}
                  {{tour hint}
                     get
                     screen})
               ({gamemode is_solo}
                  tour_solo_event_screen)
               ({{tour performer}
                     can_leave_hometown}
                  tour_band_town_screen)
               ({{tour performer}
                     can_leave_home_venue}
                  tour_band_venue_screen)
               (TRUE tour_band_event_screen)}
            TRUE}}))
{func
   log_tour
   ($system $data)}
#define TOUR_EVENT_PANEL_HANDLERS
((confirm_event
      {{tour performer}
         set_random_songs}
      {game
         set_song
         {{tour performer}
            next_song}}
      {game
         set_venue
         {tour venue_variant}}
      {session_mgr
         send_to_all
         (gamecfg load_all_chars)
         TRUE}
      {gamecfg load_all_chars}))