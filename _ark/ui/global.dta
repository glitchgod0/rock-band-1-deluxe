{func
   missing_slot_to_track_icon
   ($slot)
   {cnv_instrumenttoicon
      {if_else
         {== 3 $slot}
         {if_else
            {&&
               {game is_player_participating 0}
               {==
                  bass
                  {{game get_player_config 0}
                     get_track_sym}}}
            guitar
            bass}
         {elem
            (COOP_SLOTS_ORDER)
            $slot}}}}
{func
   get_player_icon
   ($player)
   {if_else
      {!=
         $player
         ""}
      {do
         ($pcfg
            {$player config})
         ($player_char
            {$pcfg get_char})
         {if_else
            $player_char
            {$player_char
               track_icon
               {$pcfg get_track_sym}}
            G}}
      G}}
{func
   get_player_name
