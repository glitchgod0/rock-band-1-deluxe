      $player
      {do
         ($pcfg
            {$player config})
         {$pcfg intro_name}}
      ""}}
{func
   get_player_name_from_slot
   ($slot)
   {do
      ($player_num
         {game get_player_num_from_slot_num $slot})
      {get_player_name
         {game get_player $player_num}}}}
{func
   get_track_icon_from_slot
   ($slot $track)
   {do
      ($player_num
         {game get_player_num_from_slot_num $slot})
      ($player_config
         {game get_player_config $player_num})
      {{$player_config get_char}
         track_icon
         $track}}}
